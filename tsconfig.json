{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "generator/**/*",
    "specs/**/*",
    "scripts/**/*"
  ]
}
